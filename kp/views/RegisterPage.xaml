<Page x:Class="kp.views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kp.views"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800"
      ShowsNavigationUI="False"
      Title="RegisterPage">
      
    <Grid Background="WhiteSmoke">
        <StackPanel VerticalAlignment="Center"
                    Width="200">
            <TextBlock Text="Введите Имя:"/>
            <TextBox Name="name"/>
            <TextBlock Text="Введите Фамилию:"/>
            <TextBox Name="surname"/>
            <TextBlock Text="Введите номер телефона:"/>
            <TextBox Name="phone"/>
            <TextBlock Text="Придумайте логин:"/>
            <TextBox Name="newlogin"/>
            <TextBlock Text="Придумайте пароль:"/>
            <TextBox Name="newpass"/>
            <Button Name="register"
                    Content="Зарегистрироваться"
                    Margin="5"
                    Click="register_Click"/>
        </StackPanel>
    </Grid>
</Page>
